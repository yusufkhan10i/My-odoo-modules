<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hospital_appointment_line_list" model="ir.ui.view">
        <field name="name">hospital.appointment.line.list</field>
        <field name="model">hospital.appointment.line</field>
        <field name="arch" type="xml">
            <list string="Appointments Lines" editable="top">
                <field name="appointment_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="price"/>
            </list>
        </field>
    </record>
    <record id="view_hospital_appointment_line_form" model="ir.ui.view">
        <field name="name">hospital.appointment.line.form</field>
        <field name="model">hospital.appointment.line</field>
        <field name="arch" type="xml">
            <form string="Appointment Line">
                <sheet>
                    <group>
                        <field name="appointment_id"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="price"/>
                        <field name="total" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_hospital_appointment_line" model="ir.actions.act_window">
        <field name="name">Appointment Lines</field>
        <field name="res_model">hospital.appointment.line</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocentent_smiling_face">
                Create a new appointment line
            </p>
        </field>
    </record>
</odoo>
