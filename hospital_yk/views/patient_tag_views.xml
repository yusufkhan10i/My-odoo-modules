<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_patient_tag_list" model="ir.ui.view">
        <field name="name">patient.tag.list</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <list string="Patients Tags">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_patient_tag_form" model="ir.ui.view">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color_id" widget="color_picker"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="sequence" widget="handle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_patient_tag" model="ir.actions.act_window">
        <field name="name">Patients Tags</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_no_content_smiling_face">
                Create a new patient tag
            </p>
        </field>
    </record>
</odoo>